<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--    显示列表功能-->
    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>servlet.ListDeptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/dept/list</url-pattern>
    </servlet-mapping>
    <!--查看详情功能-->
    <servlet>
        <servlet-name>detail</servlet-name>
        <servlet-class>servlet.ShowDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>detail</servlet-name>
        <url-pattern>/dept/detail</url-pattern>
    </servlet-mapping>

    <!--    删除功能-->
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>servlet.DeleteDeptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/dept/delete</url-pattern>
    </servlet-mapping>

    <!--    新增部门功能-->
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>servlet.AddDeptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/dept/add</url-pattern>
    </servlet-mapping>

    <!--    修改部门信息功能-->
    <servlet>
        <servlet-name>edit</servlet-name>
        <servlet-class>servlet.EditDeptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>edit</servlet-name>
        <url-pattern>/dept/edit</url-pattern>
    </servlet-mapping>

</web-app>